<form action="/invoices/<%= @invoice.id %>" method="post">
  <input type='hidden' name='_method' value='put'>
  <p>Invoice: <%= @invoice.id%> - <%= @invoice.status %></p>
  <div>Merchant</div>
    <select name="merchant[name]" disabled>
      <option><%= @invoice.merchant.name %></option>
    </select>
  </div>
  <div>Status</div>
    <select class="invoice-status-select text-box" name="invoice[status]">
      <option value="pending">pending</option>
      <option value="shipped">shipped</option>
      <option value="returned">returned</option>
    </select>
  </div>
    <div class="button-box">
      <a href="/invoices/<%= @invoice.id %>"></a>
      <input type="submit" value="Update Invoice">
        <button type='submit'>Cancel</button>
    </div>
</form>
